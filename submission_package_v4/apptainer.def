Bootstrap: docker
From: python:3.11-slim

%post
    mkdir -p /app
    cp -r /mnt/data/bin /app/bin || true
    cp -r /mnt/data/out /app/out || true
    cp /mnt/data/SEAL.json /app/SEAL.json || true
    cp /mnt/data/SEAL_PIN.txt /app/SEAL_PIN.txt || true

%runscript
    cd /app
    python bin/build_seal.py && python bin/compute.py && python bin/verify.py --echo && python bin/platform_log.py
